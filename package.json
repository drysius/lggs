{
  "name": "llgs",
  "type": "module",
  "description": "Simple log system for your node js application, supported colors.",
  "version": "1.0.0",
  "main": "cjs/lggs.cjs",
  "module": "mjs/lggs.js",
  "types": "lggs.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drysius/lggs.git"
  },
  "typesVersions": {
    "*": {
      ".": [
        "lggs.d.ts"
      ],
      "browser": [
        "browser.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "types": "./lggs.d.ts",
      "import": "./mjs/lggs.js",
      "require": "./cjs/lggs.cjs"
    },
    "./browser": {
      "types": "./browser.d.ts",
      "import": "./browser/browser.js"
    }
  },
  "keywords": [
    "logger",
    "log",
    "backend",
    "caeljs",
    "lggs",
    "lggs",
    "lggs",
    "color",
    "logs",
    "logger",
    "log",
    "register",
    "colors",
    "npm",
    "node",
    "bun",
    "deno",
    "typescript",
    "debug",
    "console",
    "output",
    "performance",
    "high-performance logging",
    "structured logging",
    "custom logger"
  ],
  "author": "Drysius",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/drysius/lggs/issues"
  },
  "homepage": "https://github.com/drysius/lggs#readme",
  "scripts": {
    "build": "tsc --project tsconfig.test.json && bun run build.ts",
    "docs": "typedoc",
    "test": "bun test",
    "llms": "bun run llms.ts",
    "check": "biome check --write",
    "prebuild": "tsc --project tsconfig.test.json"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.3",
    "dts-bundle-generator": "^9.5.1",
    "tsup": "^8.5.1",
    "typedoc": "^0.28.15",
    "typedoc-rhineai-theme": "^1.2.0",
    "typescript": "^5.9.3"
  }
}
